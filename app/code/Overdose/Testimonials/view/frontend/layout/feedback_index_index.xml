<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string">Home</item>
                    <item name="link" xsi:type="string">/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Feedback</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Feedback</item>
                    <item name="label" xsi:type="string">Feedback</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Feedback</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block name="feedback" class="Overdose\Testimonials\Block\SubmitUrl" template="Overdose_Testimonials::form.phtml" />
            <block name="feedback.ajax" template="Overdose_Testimonials::ajax.phtml" />
        </referenceContainer>
    </body>
</page>
